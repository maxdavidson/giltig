{
  "name": "giltig",
  "version": "0.4.0",
  "repository": "github:maxdavidson/giltig",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "description": "Simple validators utilizing TypeScript type inference",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "sideEffects": false,
  "main": "./dist/cjs/giltig.js",
  "types": "./dist/cjs/giltig.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/giltig.d.ts",
        "default": "./dist/cjs/giltig.js"
      },
      "default": {
        "types": "./dist/esm/giltig.d.ts",
        "default": "./dist/esm/giltig.js"
      }
    },
    "./strict": {
      "require": {
        "types": "./dist/cjs/strict.d.ts",
        "default": "./dist/cjs/strict.js"
      },
      "default": {
        "types": "./dist/esm/strict.d.ts",
        "default": "./dist/esm/strict.js"
      }
    }
  },
  "files": [
    "./dist",
    "./strict",
    "./src"
  ],
  "scripts": {
    "build": "rm -rf build && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
    "pretest": "cd test && tsc --build",
    "test": "node --enable-source-maps --test --test-reporter=spec",
    "prepublishOnly": "npm run build && npm run check-exports",
    "check-formatting": "prettier --check .",
    "check-exports": "npx -y @arethetypeswrong/cli --pack ."
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "prettier": "~3.0.0",
    "typescript": "~5.2.0"
  }
}
